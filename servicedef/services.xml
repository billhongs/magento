<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
        
    <service name="importPendingOrdersFromMagento" engine="java" auth="true" transaction-timeout="7200"
            location="org.ofbizus.magento.MagentoServices" invoke="importPendingOrdersFromMagento">
        <description></description>
        <attribute name="externalId" mode="IN" type="String" optional="true"/>
        <attribute name="fromDate" type="java.sql.Timestamp" mode="IN" optional="true"/>
        <attribute name="thruDate" type="java.sql.Timestamp" mode="IN" optional="true"/>
    </service>
    <service name="createOrderFromMagento" engine="java" auth="true"
            location="org.ofbizus.magento.MagentoServices" invoke="createOrderFromMagento">
        <description></description>
        <attribute name="orderInfo" mode="IN" type="Object"/>
    </service>
    <service name="importCancelledOrdersFromMagento" engine="java" auth="true"
            location="org.ofbizus.magento.MagentoServices" invoke="importCancelledOrdersFromMagento">
        <description></description>
        <attribute name="externalId" mode="IN" type="String" optional="true"/>
        <attribute name="fromDate" type="java.sql.Timestamp" mode="IN" optional="true"/>
        <attribute name="thruDate" type="java.sql.Timestamp" mode="IN" optional="true"/>
    </service>
    <service name="cancelOrderInMagento" engine="java" auth="true"
            location="org.ofbizus.magento.MagentoServices" invoke="cancelOrderInMagento">
        <description>Cancel order in magento.</description>
        <attribute name="orderId" mode="IN" type="String"/>
    </service>
    <service name="completeOrderInMagento" engine="java" auth="true"
            location="org.ofbizus.magento.MagentoServices" invoke="completeOrderInMagento">
        <description>Complete order in magento.</description>
        <attribute name="orderId" mode="IN" type="String"/>
    </service>
    <service name="updateInventoryCountInMagento" engine="java" export="true" validate="false"
            location="org.ofbizus.magento.MagentoServices" invoke="updateInventoryCountInMagento">
        <description>Srvice used to update inventory count in magento.</description>
        <attribute name="productId" mode="IN" type="String" optional="false"/>
    </service>
    
    <service name="receiveInventoryProductFromMagento" engine="simple" transaction-timeout="600"
            location="component://magento/script/org/ofbizus/magento/MagentoServices.xml" invoke="receiveInventoryProduct" auth="true">
        <description>Receive Inventory In Ofbiz From Magento</description>
        <permission-service service-name="facilityGenericPermission" main-action="CREATE"/>
        <auto-attributes entity-name="InventoryItem" include="nonpk" mode="IN" optional="true">
            <exclude field-name="availableToPromiseTotal"/>
            <exclude field-name="quantityOnHandTotal"/>
        </auto-attributes>
        <auto-attributes entity-name="InventoryItemDetail" include="nonpk" mode="IN" optional="true"/>
        <auto-attributes entity-name="ShipmentReceipt" include="nonpk" mode="IN" optional="true"/>
        <attribute name="inventoryItemDetailSeqId" type="String" mode="IN" optional="true"/>
        <attribute name="priorityOrderId" type="String" mode="IN" optional="true"/>
        <attribute name="priorityOrderItemSeqId" type="String" mode="IN" optional="true"/>
        <attribute name="currentInventoryItemId" type="String" mode="IN" optional="true"><!-- allow this to be passed in to update an existing InventoryItem, and all else is the same; if not passed in a new one will be created --></attribute>
        <attribute name="inventoryItemId" type="String" mode="OUT" optional="true"></attribute>
        <attribute name="orderCurrencyUnitPrice" type="String" mode="IN" optional="true"/>
        <override name="quantityAccepted" optional="true"/>
        <override name="quantityRejected" optional="false" default-value="0"/>
        <override name="inventoryItemTypeId" optional="false"/>
        <override name="productId" optional="false"/>
        <override name="facilityId" optional="false"/>
    </service>
    <service name="createMagentoConfiguration" engine="entity-auto" default-entity-name="MagentoConfiguration" invoke="create" auth="true">
        <description>Create Magento Configuration</description>
        <auto-attributes mode="OUT" entity-name="MagentoConfiguration" include="pk" optional="false"/>
        <auto-attributes mode="IN" entity-name="MagentoConfiguration" include="nonpk" optional="true"/>
    </service>
    <service name="updateMagentoConfiguration" engine="entity-auto" default-entity-name="MagentoConfiguration" invoke="update" auth="true">
        <description>Create Magento Configuration</description>
        <auto-attributes mode="IN" entity-name="MagentoConfiguration" include="pk" optional="false"/>
        <auto-attributes mode="IN" entity-name="MagentoConfiguration" include="nonpk" optional="true"/>
    </service>
    <service name="createUpdateMagentoConfiguration" engine="java" auth="true"
            location="org.ofbizus.magento.MagentoServices" invoke="createUpdateMagentoConfiguration">
        <description>Create Update Magento Configuration</description>
        <implements service="createMagentoConfiguration"/>
        <implements service="updateMagentoConfiguration"/>
        <override name="magentoConfigurationId" optional="true"/>
    </service>
</services>